<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

  <!-- use Spring default values -->
  <!--<include resource="org/springframework/boot/logging/logback/base.xml"/>-->
  <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
  <property name="FULL_CONSOLE_LOG_PATTERN" value="%clr(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}}) %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr([%15.15t|%X{request-id}]) %clr(%-40.40logger{39}){cyan} %clr(:){faint} [%X] %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>
  <property name="REQID_CONSOLE_LOG_PATTERN" value="%clr(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}}) %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr([%15.15t|%X{request-id}]) %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>
  <property name="CUSTOM_FILE_LOG_PATTERN" value="%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } [%t|%X{request-id}] %-40.40logger{39} : [%X] %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>

  <turboFilter class="ch.qos.logback.classic.turbo.ReconfigureOnChangeFilter">
    <refreshPeriod>5000</refreshPeriod>
  </turboFilter>

  <!-- Appender STDOUT -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${REQID_CONSOLE_LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- Appender File -->
  <appender name="File" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_FILE}</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}</fileNamePattern>
      <maxHistory>365</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>${CUSTOM_FILE_LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <root>
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="File"/>
  </root>
</configuration>
